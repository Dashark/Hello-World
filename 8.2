#include <iostream>
#include <cmath>
using namespace std;
class stockflow{
	public:
		stockflow(int n) {
			this->n = n;
			this->k = 0;
		}
		~stockflow() {};
		
		void getarray() {
			for (int i = 0; i < n; i++) 
				cin >> a[i];
		}
		int getmaxflow() {
			int j = 0;
			for (int i = 0; i < n - 1; i++) {
				j = abs(a[i] - a[i + 1]);
				if (k < j) {
					k = j;
				}
			}
			return k;
		}
		
	private:
		int n, k;
		int a[1000];
};

int main() {
	int n;
	cin >> n;
	stockflow sf(n);
	sf.getarray();
	cout << sf.getmaxflow();	
	
	return 0;
}
