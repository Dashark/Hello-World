#include <iostream>

using namespace std;
class cakedistribution{
	public:
		cakedistribution(int n, int k) {		//买三送一 买五送二 一瓶10元 
			this->n = n;
			this->k = k;
			this->s = 0;
		}
		~cakedistribution() {};
		
		void getarray() {
			for (int i = 0; i < n; i++) 
				cin >> a[i];
		}
		int numberoffriends() {
			int t = 0;
			for (int i = 0; i < n; i++) {
				t += a[i];
				if (t >= k) {
					s++;
					t = 0;
				}
			}
			if (t > 0) {
				s++;
			}	
			return s;
		}
		
	private:
		int n, s, k;
		int a[1000];
};

int main() {
	int n, k;
	cin >> n >> k;
	cakedistribution cd(n, k);
	cd.getarray();
	cout << cd.numberoffriends();	
	
	return 0;
}
