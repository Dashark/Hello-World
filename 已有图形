#include<stdio.h>
int main()
{
	
	char a[8][10]={{'-','-','*','*','-','*','*','-','-'},{'-','*','-','-','*','-','-','*','-'},
	{'-','*','-','-','-','-','-','*','-'},{'-','-','*','-','-','-','*','-','-'},
	{'-','-','-','*','-','*','-','-','-'},{'-','-','-','-','*','-','-','-','-'}
	};
	int xi,yi,wi,hi;
	scanf("%d%d%d%d",&xi,&yi,&wi,&hi);
	if(xi<1||xi>9||yi<1||yi>6||wi<1||wi>9||hi<1||hi>6||(xi+wi)<2||(xi+wi)>10||(yi+hi)<2||(yi+hi)>7){
		printf("Input Error\n");
	}
	xi-=1;
	yi-=1;
	for(int i=0;i<hi;i++)
	{
		for(int j=yi;j<(yi+wi);j++)
		{
			printf("%c",a[j][i]);
		}
		printf("\n");
	}


}
