#include <iostream>
using namespace std;
class turningpoint{
	public:
		turningpoint(int n) {
			this->n = n;
			this->s = 0;
		}
		~turningpoint() {};
		
		void getarray() {
			for (int i = 0; i < n; i++) 
				cin >> a[i];
		}
		int compare() {
			for (int j = 0; j < n - 2; j++) {
				if ((a[j] - a[j + 1]) * (a[j + 1] - a[j + 2]) < 0) {
					s++;
				}
			}
			return s; 
		}
		
	private:
		int a[1000];
		int s, n;
};

int main() {
	int n;
	cin >> n;
	turningpoint tp(n);
	tp.getarray();
	cout << tp.compare() << endl;
	
	return 0;
} 
